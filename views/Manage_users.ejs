<!DOCTYPE html>
<html lang="en">
<head>
  <title>Library Webpage</title>
  <link rel="stylesheet" href="/css/manage_user.css">
  <script>
    function showAlert(message) {
      alert(message);
      window.location.href = '/users/manage-user';
    }
  </script>
</head>
<body>
  <header>
    <nav>
      <a class="navbar-brand" href="https://www.untdallas.edu"><img src="/images/UNTDlogo.png" alt="UNTD logo"></a>
      <a class="navbuttons" href="/users/getRecords">Records</a>
      <a class="navbuttons" href="/users/create-user">Users</a>
      <a class="navbuttons" href="/pages/headcount.html">Count</a>
      <a class="navbuttons" href="/pages/Reports.html">Reports</a>
      <a href="/pages/homepage.html" class="reportdesk">ReportDesk</a>
    </nav>
  </header>
  <section>
    <div class="button-group">
      <a href="/users/create-user" style="background-color: gray;">
        <div id='5'> Create User</div>
      </a>
      <a href="/users/manage-user">
        <div id='6'> Manage Users</div>
      </a>
    </div>
    <form action="/users/delete-user" method="POST">
      <div class="email-div">
        <h1>User Email:</h1>
        <input type="text" id="email" name="email" />
      </div>
      <fieldset id="userbox">
        <div class="form-container">
          <div class="user-info">
            <p><b>First Name:</b> <input type="text" name="fn" /></p>
            <p><b>Last Name:</b><input type="text" name="ln" /></p>
            <p><b>Email:</b><input type="text" name="em" /></p>
            <p><b>Password:</b><input type="password" name="password" /></p>
          </div>
        </div>
        <div class="save-delete">
          <div><button id='a'> Save</button></div>
          <div><button type="submit" id='b'> Delete</button></div>
        </div>
      </fieldset>
    </form>
  </section>
  <footer>
    <p>University of North Texas at Dallas</p>
  </footer>
  <% if (typeof message !== 'undefined') { %>
    <script>
      showAlert('<%= message %>');
    </script>
  <% } %>
</body>
</html>