<!DOCTYPE html>
<html lang="en">
<head>
  <title>Library Webpage</title>
  <link rel="stylesheet" href="/css/create_user.css">
  <script>
    function showAlert(message) {
      alert(message);
      window.location.href = '/users/create-user';
    }
  </script>
</head>
<body>
  <header>
    <nav>
      <a class="navbar-brand" href="https://www.untdallas.edu"><img src="/images/UNTDlogo.png" alt="UNTDlogo"></a>
      <a class="navbuttons" href="/users/getRecords">Records</a>
      <a class="navbuttons" href="/users/create-user">Users</a>
      <a class="navbuttons" href="/pages/headcount.html">Count</a>
      <a class="navbuttons" href="/pages/Reports.html">Reports</a>
      <a href="/Login" class="reportdesk">ReportDesk</a>
    </nav>
  </header>
  <section>
    <div class="button-group">
      <a href="/users/create-user">
        <div id='5'> Create User</div>
      </a>
      <a href="/users/manage-user" style="background-color: gray;">
        <div id='6'> Manage Users</div>
      </a>
    </div>
    <h1>User Information</h1>
    <form action="/users/create-user" method="POST">
      <fieldset id="userbox">
        <div class="form-container">
          <div class="user-info">
            <p><b>First Name:</b> <input type="text" name="firstName" /></p>
            <p><b>Last Name:</b><input type="text" name="lastName" /></p>
            <p><b>Email:</b><input type="text" name="email" /></p>
            <p><b>Password:</b><input type="password" name="password" /></p>
          </div>
        </div>
        <div style="text-align: center;"><button type="submit" id='c'> Create</button></div>
      </fieldset>
    </form>
  </section>
  <footer>
    <p>University of North Texas at Dallas</p>
  </footer>
  <% if (typeof message !== 'undefined') { %>
    <script>
      showAlert('<%= message %>');
    </script>
  <% } %>
</body>
</html>